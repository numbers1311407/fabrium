<div class="fabrics-show" ng-class="{'modal-body': isModal}">
  <div class="row">
    <div class="fabrics-show-image col-sm-6">
      <div id="slideshow-1">
        <div id="cycle-1" cycle
            index="position"
            bubble-click-events="!isModal"
            data-cycle-slides="[ng-repeat]"
            data-cycle-timeout="0"
            data-cycle-fx="fade"
            data-cycle-log=false
            data-cycle-pager="#adv-custom-pager"
            data-cycle-pager-template=""
        >
          <div data-rulered={{v.image.width}} ng-repeat="v in fabric.variants">
            <img ng-src="{{ v.image.full }}" />
          </div>
        </div>
      </div>
      <div id="adv-custom-pager" class="center external">
        <a href={{fabric.getVariantUrl(v.position)}} ng-repeat="v in fabric.variants">
          <img ng-src="{{ v.image.tiny }}">
        </a>
      </div>
    </div>
    <div class="fabrics-show-details col-sm-6">
      <dl>
        <dt>Mill</dt> <dd ng-bind="fabric.mill.name | default"></dd>
        <dt>Fabrium #</dt> <dd ng-bind="variant.fabrium_id"></dd>
        <dt>Fiber Content</dt> <dd ng-bind="fabric.materials | materials | default"></dd>
        <dt>Weight</dt> <dd ng-bind-html="fabric.weight | weight"></dd>
        <dt>Width</dt> <dd ng-bind="fabric.width | width"></dd>
        <dt>Country of Origin</dt> <dd ng-bind="fabric.country.name | default"></dd>
        <dt>Price</dt> <dd ng-bind="fabric.price | price"></dd>
        <dt>In Stock</dt> <dd ng-bind="variant.in_stock | yesno"></dd>
        <dt>Category</dt> <dd ng-bind="fabric.category.name | default"></dd>
        <dt>Dye Method</dt> <dd ng-bind="fabric.dye_method.name | default"></dd>
        <dt>Keywords</dt> <dd ng-bind="fabric.tags | tags"></dd>
        <dt>Sample Lead Time</dt> <dd ng-bind="fabric.lead_time.sample"></dd>
        <dt>Bulk Lead Time</dt> <dd ng-bind="fabric.lead_time.bulk"></dd>
        <dt>Sample Minimum M<sup>2</sup></dt> <dd ng-bind="fabric.minimum_quality.sample"></dd>
        <dt>Bulk Minimum M<sup>2</sup></dt> <dd ng-bind="fabric.minimum_quality.bulk"></dd>
      </dl>
    </div>
  </div>

  <div class="row">
    <div class="buttons col-sm-12">
      <a class="btn btn-default" ng-click="currentUser.toggleFavorite(fabric.id)">
        <i class="fa fa-heart-o"></i>
        <span ng-bind="currentUser.hasFavorite(fabric.id) ? 'Remove from favorites' : 'Add to favorites'"></span>
      </a>
      <a class="btn btn-default" href="{{ fabric.links | link:'edit' }}">Edit</a>
      <a class="btn btn-default" href="#print" ng-click="print()">Print</a>
      <a class="btn" ng-show="cart" ng-class="{true: 'btn-danger', false: 'btn-primary'}[cart.hasItem(variant.id)]" ng-click="cart.toggleItem(variant.id)" href="#request" ng-bind="cart.hasItem(variant.id) ? 'Request Pending' : 'Request Hanger'"></a>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <label for="mynotes">
          <span>My Notes</span>
          &mdash;
          <i>These are private and not shared with the mill</i>
        </label>
        <textarea options='fabric' fabric-notes-for="fabric" id="mynotes" class="form-control" rows="3" ng-model="fabric.note"></textarea>
      </div>
    </div>
  </div>
</div>
